---
import ExperienceItems from "./ExperienceItems.astro"
import { experiencieEs, experiencieEn } from "./data/Experiencie"


const { lenguage } = Astro.props

const EXPERIENCES = lenguage === 'es' ? experiencieEs : experiencieEn

---

<ol class="border-s border-gray-200 ml-4">                  
    {
        EXPERIENCES.map(experiencie => (
            <ExperienceItems {...experiencie} lenguage={lenguage} />
        ))
    } 
</ol>

